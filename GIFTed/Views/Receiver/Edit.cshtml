@using GIFTed.ViewModels;
@model AddReceiverViewModel;

<h1>Edit Receiver</h1>

<form asp-controller="Receiver" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name">Receiver Name</label>
        <input class="form-control" asp-for="Name" value="@Model.Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Birthday">Receiver Birthday</label>
        <input class="form-control" asp-for="Birthday" value="@Model.Birthday"/>
        <span asp-validation-for="Birthday"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Receiver Address</label>
        <input class="form-control" asp-for="Address" value="@Model.Address"/>
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Receiver Email Address</label>
        <input class="form-control" id="exampleInputEmail" placeholder="Enter email" asp-for="ContactEmail" value="@Model.ContactEmail" />
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Relationship Type</label>
        <select class="form-control" id="exampleSelect1" asp-for="Type" value="@Model.Type" asp-items="Model.RelationshipTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea class="form-control" id="exampleTextarea" rows="10" asp-for="Notes" value="@Model.Notes">Add Notes</textarea>
    </div>
    <input role="button" type="submit" class="btn btn-primary" value="Save" />
</form>